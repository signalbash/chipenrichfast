Package: chipenrich
Type: Package
Title: Gene Set Enrichment For ChIP-seq Peak Data
Version: 2.1.4
Date: 2017-10-13
Authors@R: c(
	person(c("Ryan","P."),"Welch",role = c("aut","cph"),email = "welchr@umich.edu"),
	person("Chee","Lee",role = c("aut"),email = "cheelee@umich.edu"),
